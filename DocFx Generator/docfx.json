{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Razor.Blade/*.csproj",
            "Connect.Razor.Dnn/*.csproj"
          ],
          "cwd": "..",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "obj/api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/*.md",
          "articles/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md",
          "namespaces/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "../docs",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appTitle": "RazorBlade 3",

      "_appLogoPath": "images/logos/razor-blade-icon-50.png",
      "_enableNewTab": true,
      "_enableSearch": true
    }
  }
}